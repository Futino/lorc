@layer components {
  .card-zoom {
    @apply relative flex items-center bg-surface-dark justify-center place-self-center m-2 overflow-hidden shadow-xl w-[300px] h-[200px] rounded-2xl;
  }

  .card-zoom-image {
    @apply absolute w-full h-full transition-all duration-700 scale-125 ease-in-out opacity-70 transform bg-center bg-cover;
  }

  .card-zoom-text {
    @apply absolute transition-all duration-700 ease-in-out transform scale-100 opacity-70;
  }

  .card-zoom:hover .card-zoom-image {
    @apply scale-100 opacity-90;
  }

  .card-zoom:hover .card-zoom-text {
    @apply scale-110 opacity-100;
  }

  #styled_checkboxes input[type=checkbox] {
    display: none;
  }

  #styled_checkboxes input[type=checkbox]:checked+.card-zoom {
    border: 2px solid rgba(81, 203, 238, 1);
    box-shadow: 0 0 5px rgba(81, 203, 238, 1);
  }

  .display-large {
    font-family: var(--md-sys-typescale-display-large-font-family-name);
    font-style: var(--md-sys-typescale-display-large-font-family-style);
